#include <stdio.h>
int power(int x, int y) {
		int result = 1;
		if(y == 0) {
		result = 1;
		}
		if(y > 0){
		for(int i = 0; i < y; ++i){
		result *= x;
		}
		}
		return result;
		}
	int main() {
	int x = 0;
	 int y = 0;
	 printf("Enter the numbers : ");
	 scanf("%d %d", &x, &y);	
	 printf("%d", power(x,y));
	 return 0;
	 }
