#include <stdio.h>
#define SIZE 7
void  reverse(int arr[], int size){

	
	int tmp = 0;
	int j = size - 1;
	for(int i = 0; i < size/2; ++i){
	tmp = arr[i];
	arr[i] = arr[j];
	arr[j] = tmp;

	j--;
	}
				for(int i = 0; i < size; ++i){
				printf("%d", arr[i]);
		}
		
		}
	int main(){
	int arr[SIZE];
	printf("Enter the elements : ");
	for(int i = 0; i < SIZE; ++i){
	scanf("%d", &arr[i]);
	}
	reverse(arr,SIZE);
	return 0;
	}
