#include <stdio.h>
#include <stdbool.h>
bool prime(int number) {
	if(number <= 1){
	printf("Number is not prime");
	return false;
	}
	for(int i = 0; i * i <= number; ++i){
			if(number % 2 == 0){
			printf("Number is not prime :");
			
			return false;
			}
			}
			printf("Number is prime : ");
			
			return true;
			
}

	int main() {
	int number = 0;
	printf("Enter the number : ");
	scanf("%d", &number);
	prime(number);
	return 0;
	}


